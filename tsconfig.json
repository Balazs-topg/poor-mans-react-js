{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "outDir": "./dist",
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsxFactory": "createElement"
  },
  "include": ["*.ts", "*.tsx", "*.js", "*.jsx"],
  "exclude": ["node_modules", "dist"]
}
