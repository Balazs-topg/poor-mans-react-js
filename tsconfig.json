{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "outDir": "./dist",
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
